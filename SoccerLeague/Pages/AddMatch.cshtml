@page
@model SoccerLeague.Pages.AddMatchModel

@{
    ViewData["Title"] = "AddMatch";
}

<h1>AddMatch</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Match.Start" class="control-label"></label>
                <input asp-for="Match.Start" class="form-control" />
                <span asp-validation-for="Match.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.HomeTeamId" class="control-label"></label>
                <select asp-for="Match.HomeTeamId" class ="form-control" asp-items="ViewBag.Teams"></select>
            </div>
            <div class="form-group">
                <label asp-for="Match.HomeTeamScore" class="control-label"></label>
                <input asp-for="Match.HomeTeamScore" class="form-control" />
                <span asp-validation-for="Match.HomeTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.AwayTeamId" class="control-label"></label>
                <select asp-for="Match.AwayTeamId" class="form-control" asp-items="ViewBag.Teams"></select>
            </div>
            <div class="form-group">
                <label asp-for="Match.AwayTeamScore" class="control-label"></label>
                <input asp-for="Match.AwayTeamScore" class="form-control" />
                <span asp-validation-for="Match.AwayTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to Standings</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
